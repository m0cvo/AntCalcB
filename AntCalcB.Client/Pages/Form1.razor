@page "/Form1"

<h3>AntCalc</h3>

<label>Please enter frequency in Mhz: </label>
<input @bind="freq" />
<p role="status">Wavelength: @wavelength m.</p>

<button class="btn btn-primary" @onclick="Calc">Enter</button>


@code {
    public double freq { get; set; }
    public double wavelength = 0;

    private void Calc()
    {
        wavelength = 300 / freq;
    }

    
}
